[System.Serializable]
public class LoreEntry {
    public string title;
    public string description;
    public Sprite comicPanel;
    public AudioClip voiceLine;
    public bool isUnlocked;
}

public class LoreCodex : MonoBehaviour {
    public List<LoreEntry> entries;

    public void UnlockEntry(string title) {
        LoreEntry entry = entries.Find(e => e.title == title);
        if (entry != null) entry.isUnlocked = true;
    }

    public void DisplayEntry(string title) {
        LoreEntry entry = entries.Find(e => e.title == title);
        if (entry != null && entry.isUnlocked) {
            // Show panel, play voice, display text
        }
    }
}
